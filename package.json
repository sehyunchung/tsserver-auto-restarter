{
  "name": "tsserver-auto-restarter",
  "displayName": "TSServer Auto Restarter",
  "description": "Restart tsserver when you move to another ts(x) file",
  "repository": {
    "type": "git",
    "url": "git@github.com:sehyunchung/tsserver-auto-restarter.git"
  },
  "author": {
    "name": "Sehyun Chung",
    "email": "hi@sehyunchung.dev"
  },
  "publisher": "SehyunChung",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tsserverAutoRestarter.enable",
        "title": "Enable",
        "category": "TSServer Auto Restarter"
      },
      {
        "command": "tsserverAutoRestarter.disable",
        "title": "Disable",
        "category": "TSServer Auto Restarter"
      }
    ],
    "configuration": {
      "title": "TSServer Auto Restarter",
      "properties": {
        "tsserverAutoRestarter.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable/disable automatic restart of TypeScript server on active editor change."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.76.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "ts-loader": "^9.4.2",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "@vscode/test-electron": "^2.3.0"
  },
  "license": "MIT"
}
